<div style="width:80%";margin:0 auto;>
  <h1 class="white">Editar Marca</h1>
  <%= form_for(@brand) do |f|%>

    <!-- Aqui es donde comienza la validacion de errores de articles-->
      <%@brand.errors.full_messages.each do |message|%>
      <div class="be-red white top-space">
        * <%=message%>
      </div>
      <%end%>
  <!-- Aqui termina la validacion de errores de articles -->

      <div class="field">
        <%= f.text_field :name, placeholder: "Marca",class:"form-control"%>
      </div>

          <%=f.submit "guardar",class:"btn be-red white"  %>
      </div>

</div>
<div class="row">
  <div class="btn white top-space center">
    <%=link_to "Ver todas las marcas",brands_path,class:"btn be-red white"%>
</div>
<% end %>
